                                            <TranslateTransform x:Name="HeaderFlyinFlyoutTransform"/>
                                        </TransformGroup>
                                    </ContentControl.RenderTransform>
                                </ContentControl>
                            </Canvas>
                        </Grid>
                    </ControlTemplate>
