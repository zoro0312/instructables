                        <Image.Source>
                            <BitmapImage UriSource="ms-appx:///Assets/About_Logo.png" />
                        </Image.Source>
                    </Image>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
