                  Loaded="StepsView_Loaded"
                  SelectionChanged="StepView_SelectionChanged"/>

        <Grid x:Name="ChannelMenu" Visibility="Collapsed" Background="#FFF4F5F6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Foreground="Black"  Text="Choose a channel" VerticalAlignment="Center" FontSize="32" FontFamily="Segoe WP" IsTextScaleFactorEnabled="False" FontWeight="Normal" Margin="10,10,10,10"/>
            <ListBox 
            DataContext="{Binding ExploreVM, Source={StaticResource Locator}}"
            Grid.Row="1"
            BorderThickness="0"
            ItemsSource="{Binding CurrentGroup.CurrentGroupChannels}"
            ItemTemplate="{StaticResource ChannelItemTemplate}"
            SelectedIndex="{Binding SelectedChannelIndex, Mode=TwoWay}"
            SelectionChanged="Channel_SelectionChanged"
            ItemContainerStyle="{StaticResource ListBoxItemStyle}">
            </ListBox>
        </Grid>

        <Grid x:Name="CategoryMenu" Visibility="Collapsed" Background="#FFF4F5F6" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Foreground="Black"  Text="Choose a category" VerticalAlignment="Center" FontSize="32" FontFamily="Segoe WP" IsTextScaleFactorEnabled="False" FontWeight="Normal" Margin="10,10,10,10"/>
            <ListBox
            x:Name="CategoryMenuList"
            DataContext="{Binding ExploreVM, Source={StaticResource Locator}}"
            Grid.Row="1"
            BorderThickness="0"
            ItemsSource="{Binding CollectionCategoryList}"
            ItemTemplate="{StaticResource CategoryItemTemplate}"
            SelectedIndex="{Binding SelectedCollectionCategoryIndex, Mode=TwoWay}"
            SelectionChanged="Category_SelectionChanged"
            ItemContainerStyle="{StaticResource ListBoxItemStyle}"
            >
            </ListBox>
        </Grid>

        <Grid Background="Black" Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ProgressBar Grid.Row="0" IsIndeterminate="True" Height="50" Width="320" Background="Transparent" Foreground="Orange"  VerticalAlignment="Bottom" />
            <TextBlock x:Name="SavingText" Grid.Row="1" Text="Saving..." IsTextScaleFactorEnabled="False" Foreground="LightGray" FontWeight="SemiBold" HorizontalAlignment="Center" FontFamily="Segoe WP" FontSize="22"  VerticalAlignment="Top" />
        </Grid>
        <Grid Background="Black" x:Name="LoadingPanel" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ProgressRing Grid.Row="0" IsActive="True" VerticalAlignment="Bottom"/>
            <TextBlock Grid.Row="1" Text="Loading..." Foreground="LightGray" FontWeight="SemiBold" HorizontalAlignment="Center" FontFamily="Segoe WP" FontSize="22" IsTextScaleFactorEnabled="False" VerticalAlignment="Top" Margin="0,20,0,0"/>
        </Grid>        
    </Grid>

