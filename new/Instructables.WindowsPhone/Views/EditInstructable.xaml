                        <TextBlock Text="{Binding stepIndex}" Foreground="White" FontSize="22" FontFamily="Segoe WP" HorizontalAlignment="Center" VerticalAlignment="Center" IsTextScaleFactorEnabled="False"/>
                    </Border>
                    <Button Grid.Row="0" Style="{StaticResource ImageButton}" Click="DelStepButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Visibility="{Binding stepIndex, Converter={StaticResource GreaterThanNumericVisibilityConverter}, ConverterParameter=0}">
