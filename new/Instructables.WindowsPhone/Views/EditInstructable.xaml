                    </Button>
                    <Border Grid.Row="1" BorderThickness="0" Background="#5e5e5e" Visibility="{Binding stepIndex, Converter={StaticResource LessThanNumericVisibilityConverter}, ConverterParameter=0}">
                        <TextBlock Text="{Binding StepName}" Foreground="White" FontSize="18" FontFamily="Segoe WP" FontWeight="SemiBold" IsTextScaleFactorEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </DataTemplate>

